meta {
  name: Add a Tag to the Issue
  type: http
  seq: 3
}

post {
  url: {{baseUrl}}/issues/:id/tags?fields=id,name,owner(login,name),visibleFor(name,id)
  body: json
  auth: inherit
}

params:query {
  fields: id,name,owner(login,name),visibleFor(name,id)
}

params:path {
  id: {{issue}}
}

body:json {
  {
      "id": "{{tagID}}"
  }
}

settings {
  encodeUrl: true
}
