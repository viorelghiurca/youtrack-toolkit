meta {
  name: Update a Specific IssueCustomField
  type: http
  seq: 2
}

post {
  url: {{baseUrl}}/issues/:id/customFields/:issueCustomFieldId?fields=id,name,value(id,name)
  body: json
  auth: inherit
}

params:query {
  fields: id,name,value(id,name)
}

params:path {
  id: {{issue}}
  issueCustomFieldId: {{issueCustomFieldID}}
}

headers {
  Content-Type: application/json
}

body:json {
  {
      "value": {
          "name": "Normal"
      }
  }
}

settings {
  encodeUrl: true
}
