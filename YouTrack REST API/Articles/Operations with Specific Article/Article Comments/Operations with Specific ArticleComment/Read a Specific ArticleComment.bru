meta {
  name: Read a Specific ArticleComment
  type: http
  seq: 2
}

get {
  url: {{baseUrl}}/articles/:id/comments/:articleCommentId?fields=id,author(id,name),text,created,visibility(permittedGroups(id,name),permittedUsers(id,name))
  body: none
  auth: inherit
}

params:query {
  fields: id,author(id,name),text,created,visibility(permittedGroups(id,name),permittedUsers(id,name))
}

params:path {
  id: {{articleID}}
  articleCommentId: {{articleCommentID}}
}

settings {
  encodeUrl: true
}
